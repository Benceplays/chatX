<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatX.Pages.ChatPageClient"
             Title="ChatPageClient">
    <VerticalStackLayout VerticalOptions="End">
        <Label
            Text="Code: "
            x:Name="codeLabel"
            TextColor="#fff"
            />
        <Entry
            BackgroundColor="#fff"
            WidthRequest="200"
            HeightRequest="200"
            x:Name="ChatEntry"
            />
        <Entry
            BackgroundColor="#333"
            Margin="10, 0, 0, 10"
            WidthRequest="250"
            HorizontalOptions="FillAndExpand"
            x:Name="messagetext"
            />
        <Button
            Text = "â†’"
            Clicked="SendButton"
            FontSize="40"
            Padding="0, -10, 0, -10"
            WidthRequest="50"
            Margin="0, 0, 0, 10"
            BackgroundColor="#333"
            HorizontalOptions="EndAndExpand"
            />
    </VerticalStackLayout>
</ContentPage>