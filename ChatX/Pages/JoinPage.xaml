<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatX.JoinPage">
<VerticalStackLayout>
        <Label 
            Text="Join to lobby"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="25"/>
        <Label
            Text="Name"
            Margin="0, 50, 0, 0"
            HorizontalOptions="Center"
            />
        <Entry
            x:Name="nameInput"
            HorizontalOptions="Center"
            BackgroundColor="#333"
            MaxLength="32"
            MinimumWidthRequest="300"
            Margin="0, 0, 0, 50"
            />
        <Label
            Text="Code"
            HorizontalOptions="Center"
            />
        <Entry
            x:Name="codeInput"
            HorizontalOptions="Center"
            BackgroundColor="#333"
            MaxLength="32"
            MinimumWidthRequest="300"
            Margin="0, 0, 0, 50"
            />
        <Button
            Text="Join"
            HorizontalOptions="Center"
            />
    </VerticalStackLayout>
</ContentPage>